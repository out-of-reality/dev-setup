{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Odoo (debugpy)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 17899
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/odoo",
          "remoteRoot": "/opt/odoo"
        }
      ],
      "justMyCode": false
    }
  ]
}
